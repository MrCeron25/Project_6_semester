<Page x:Class="Project.Views.Pages.PavilionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:cmd="clr-namespace:Project.Infrastructure.Commands"
      xmlns:vm="clr-namespace:Project.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PavilionPage">

    <Grid Style="{StaticResource GridTemplate}"
          DataContext="{x:Static vm:ManagerCViewModel.Instanse}">

        <Menu Style="{StaticResource MenuTemplate}">
            <MenuItem Header="Меню">
                <MenuItem Header="Торговые центры" Command="{Binding OpenMallCommand}"/>
                <MenuItem Header="Павильоны" Command="{Binding OpenPavilionCommand}"/>
                <Separator />
                <MenuItem Header="Выйти">
                    <MenuItem.Command>
                        <cmd:GoToLoginCommand/>
                    </MenuItem.Command>
                </MenuItem>
            </MenuItem>
        </Menu>

        <TextBlock Style="{StaticResource AuthorTemplate}" Grid.Column="1"/>

        <TextBlock Text="PavilionPage"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="40"/>

    </Grid>
</Page>
